CC = g++
CFLAGS = -W -Wall -g

OBJ_DIR := ./obj
SRC_DIR := ./src
HDR_DIR := ./include

SCR_DIRS := $(shell find $(SRC_DIR) -type d)
HDR_DIRS := $(shell find $(HDR_DIR) -type d)
# Look for .c source file in every subdir of src/
vpath %.c $(SCR_DIRS)
#SRCS contains the names of all source files under src/
SRCS := $(shell find $(SRC_DIR) -name '*.cpp' -or -name '*.c' -printf "%f ")
#HDRS contains the paths of all header files under include/
HDRS := $(shell find $(HDR_DIR) -name '*.h')
#OBJ contains the paths of all object files to be created under bin/
OBJS := $(patsubst %.c,$(OBJ_DIR)/%.o, $(SRCS))

INCLUDE_STR := $(patsubst %, -I%, $(HDR_DIRS))

all: $(OBJS)
	@:

#Every obj/%.o file is generated by compiling the matching %.c in src/ plus header files
$(OBJ_DIR)/%.o: %.c $(HDRS)
	@mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -c $< $(INCLUDE_STR) -o $@

.PHONY: clean
clean:
	rm -f $(OBJS) 